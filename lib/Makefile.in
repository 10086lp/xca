VERSION=@PACKAGE_VERSION@
TARGET=xca-$(VERSION)

GCC=@CXX@
CPPFLAGS=@CPPFLAGS@ -Wall -g
MOC=@MOC@

##############################################


PKIOBJS=pki_base.o pki_key.o pki_x509req.o pki_x509.o pki_pkcs12.o pki_temp.o
DBOBJS=db_base.o db_key.o db_x509req.o db_x509.o db_temp.o db_key_MOC.o db_x509req_MOC.o db_x509_MOC.o db_temp_MOC.o
     

all: libpki.a libxcadb.a

libpki.a: $(PKIOBJS)
	ar rcs libpki.a $(PKIOBJS)

libxcadb.a: $(DBOBJS)
	ar rcs libxcadb.a $(DBOBJS)
	
%.o: %.cpp 
	$(GCC) $(CPPFLAGS) -c $(INC) -DVER=\"$(VERSION)\" -DPREFIX=\"@prefix@/share/xca\" $<

clean:
	rm -rf *~ *.o *.a *_MOC.cpp

distclean: clean
	rm -f Makefile

%_MOC.cpp: %.h %.cpp
	$(MOC) $< -o $@
