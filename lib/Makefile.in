VERSION=@PACKAGE_VERSION@
TARGET=xca-$(VERSION)

GCC=@CXX@
CC=@CC@
MOC=@MOC@

CPPFLAGS=@CPPFLAGS@ @DEFS@
CFLAGS=-Wall @ac_DEBUG@

##############################################


PKIOBJS=pki_base.o pki_key.o pki_x509req.o pki_x509.o pki_pkcs12.o pki_temp.o pki_crl.o pki_pkcs7.o
DBNAMES=db_key db_x509req db_x509 db_temp
DBOBJS=db_base.o $(patsubst %,%.o,$(DBNAMES)) $(patsubst %,moc_%.o,$(DBNAMES))
DB_CPP=$(patsubst %,moc_%.cpp,$(DBNAMES))

all: libpki.a libxcadb.a

libpki.a: $(PKIOBJS)
	$(AR) rcs libpki.a $(PKIOBJS)

libxcadb.a: $(DBOBJS)
	$(AR) rcs libxcadb.a $(DBOBJS)
	
%.o: %.cpp 
	$(CC) $(CPPFLAGS) $(CFLAGS) -c $< -o $@
clean:
	rm -rf *~ *.o *.a $(DB_CPP)

distclean: clean
	rm -f Makefile

moc_%.cpp: %.h %.cpp
	$(MOC) $< -o $@
  
.SECONDARY: $(DB_CPP)
