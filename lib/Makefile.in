VERSION=@PACKAGE_VERSION@
TARGET=xca-$(VERSION)

GCC=@CXX@
CC=@CC@
MOC=@MOC@
AR=@AR@
RANLIB=@RANLIB@

CPPFLAGS=@CPPFLAGS@ @DEFS@
CFLAGS=-Wall @ac_DEBUG@

##############################################

PKINAMES=asn1int asn1time x509name pass_info \
	pki_key pki_x509super pki_x509req pki_x509 \
	pki_pkcs12 pki_temp pki_crl pki_pkcs7 \
	db_base func 

MOCNAMES=pki_base db_key db_x509super db_x509req db_x509 db_temp db_crl

PKIOBJS=$(patsubst %, %.o, $(MOCNAMES) $(PKINAMES)) $(patsubst %, moc_%.o, $(MOCNAMES))
DB_CPP=$(patsubst %,moc_%.cpp,$(MOCNAMES))

all: libpki.a

libpki.a: $(PKIOBJS) 
	$(AR) rc $@ $(PKIOBJS)
	$(RANLIB) $@

%.o: %.cpp 
	$(CC) $(CPPFLAGS) $(CFLAGS) -c $< -o $@
clean:
	rm -rf *~ *.o *.a $(DB_CPP)

distclean: clean
	rm -f Makefile base.h

moc_%.cpp: %.h %.cpp
	$(MOC) $< -o $@
  
.SECONDARY: $(DB_CPP)
